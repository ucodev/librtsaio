CC=`cat ../.compiler`
DEFS=-DCONFIG_EPOLL=1
CCFLAGS=${DEFS} -fPIC -g -pthread -fstrict-aliasing -Wall -Werror -pedantic
ECFLAGS=`cat ../.ecflags`
ARCHFLAGS=`cat ../.archflags`
LDFLAGS=-shared -lpall -lpthread
ELFLAGS=`cat ../.elflags`
TARGET=librtsaio.so

all:
	${CC} ${ECFLAGS} ${CCFLAGS} ${ARCHFLAGS} -c asyncop.c
	${CC} ${ECFLAGS} ${CCFLAGS} ${ARCHFLAGS} -c mm.c
	${CC} ${ECFLAGS} ${CCFLAGS} ${ARCHFLAGS} -c rtsaio.c
	${CC} ${ECFLAGS} ${CCFLAGS} ${ARCHFLAGS} -c timespec.c
	${CC} ${LDFLAGS} -o ${TARGET} asyncop.o rtsaio.o timespec.o ${ELFLAGS}

clean:
	rm -f *.o
	rm -f ${TARGET}
